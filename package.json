{
  "name": "eb-cli",
  "version": "1.0.0",
  "description": "The CLI for EasyBackend",
  "main": "build/index.js",
  "scripts": {
    "start": "node ./src/bin/eb-create-server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf ./src/build && tsc && ncp ./src/templates ./src/build",
    "lint": "eslint . --ext .js,.ts --fix",
    "commit": "npx git-cz",
    "test:coverage": "jest --coverage",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "www.github.com/KorenEzri/EasyBackend.git"
  },
  "homepage": "https://github.com/KorenEzri/EasyBackend#readme",
  "author": "Koren Ben-Ezri",
  "license": "ISC",
  "dependencies": {
    "arg": "^5.0.1",
    "chalk": "^4.1.2",
    "execa": "^5.1.1",
    "inquirer": "^8.1.2",
    "listr": "^0.14.3",
    "morgan": "^1.10.0",
    "ncp": "^2.0.0",
    "pkg-install": "^1.0.0",
    "prettier": "^2.3.2",
    "esm": "^3.2.25",
    "ts-node": "^10.2.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/inquirer": "^7.3.3",
    "@types/listr": "^0.14.4",
    "@types/morgan": "^1.9.3",
    "@types/ncp": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.2",
    "standard-version": "^9.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^3.4.1"
  },
  "bin": {
    "@korenezri/easy-backend": "bin/eb-create-server",
    "eb-init-cli": "./src/bin/eb-init-cli",
    "eb-create-server": "./src/bin/eb-create-server"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "files": [
    "src/build/**/*",
    "src/build/cli/**/*"
  ]
}
